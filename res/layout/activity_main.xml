<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/evTitleView"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/evDateView"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/evDescriptionView"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/evImageView"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="left"
        android:layout_row="3"
        android:contentDescription="@string/image_alt" />

    <TextView
        android:id="@+id/evLocNameView"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="left"
        android:layout_row="5" />

    <TextView
        android:id="@+id/evLocStreetView"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="left"
        android:layout_row="6" />

    <TextView
        android:id="@+id/evLocZipView"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="7" />

    <TextView
        android:id="@+id/evLocCityView"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_gravity="left"
        android:layout_row="7" />

    <TextView
        android:id="@+id/textMoreInfoView"
        android:layout_gravity="left"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_row="9"
        android:text="@string/more_info" />

    <TextView
        android:id="@+id/textTelView"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="10"
        android:text="@string/phone"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/evOrgPhoneView"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_gravity="left"
        android:layout_row="10" />

    <TextView
        android:id="@+id/textEmailView"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="11"
        android:text="@string/email"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/evOrgEmailView"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_gravity="left"
        android:layout_row="11" />

    <TextView
        android:id="@+id/textWebView"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="12"
        android:text="@string/web"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/evOrgWebView"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_gravity="left"
        android:layout_row="12" />

</GridLayout>